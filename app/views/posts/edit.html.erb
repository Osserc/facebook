<%= turbo_frame_tag @post do %>
    <% if @post.postable_type == "TextPost" %>
        <%= render partial: "form_text", locals: { title: @post.postable.title, body: @post.postable.body } %>
    <% elsif @post.postable_type == "ImagePost" %>
        <%= render partial: "form_image", locals: { title: @post.postable.title } %>
    <% end %>
<% end %>