<%= turbo_frame_tag "shown-post" do %>
    <%= @post.postable.title %>
    <%= @post.postable.body if @post.postable.has_attribute?(:body) %>
<% end %>

<%= turbo_frame_tag @post do %>
    <% if same_user?(@post.author) %>
        <%= link_to "Edit", edit_user_post_path(current_user) %>
    <% end %>
<% end %>

<%= render partial: 'shared/comment', collection: @post.comments %>

<%= render "shared/like_buttons", post: @post %>

<%= link_to "User", user_path(@post.author_id) %>
<%= link_to "Home", root_path %>