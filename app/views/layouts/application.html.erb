<!DOCTYPE html>
<html>
  <head>
    <title>Facebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <div class="header">
      <% if user_signed_in? %>
        <div>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: "false" } %>
        </div>
        <div id="flash">
          <%= render "shared/flash_messages" %>
        </div>
        <div class="navbar-actions">
          <%= button_to "My profile", user_path(current_user), method: :get %>
          <%= button_to "Home", root_path, method: :get %>
        </div>
      <% else %>
        <%= link_to "Log in", new_user_session_path, data: { turbo: "false" } %>
        <%= link_to "Register", new_user_registration_path, data: { turbo: "false" } %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
