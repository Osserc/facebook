<%= turbo_stream.update "followers-count-index-#{@user.id}" do %>
    <% if user.follows.count == 0 %>
        Followers: <%= @user.followers.count %>
    <% else %>
        Followers: <%= link_to "#{user.followers.count}", user_followings_path(@user, type: "Followers") %>
