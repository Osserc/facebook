<%= turbo_stream.append "nested-list-#{@comment.commentable_id}" do %>
    <%= render partial: "shared/comment_single", object: @comment, as: :comment %>
<% end %>

<%= turbo_stream.update dom_id(@comment.commentable, "new") do %>
    <%= link_to "Comment", new_comment_path(commentable_type: @comment.commentable.model_name.human, commentable_id: @comment.commentable_id) %>
<% end %>
