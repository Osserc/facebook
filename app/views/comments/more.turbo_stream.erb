<%= turbo_stream.update "nested-list-#{@comment.id}" do %>
    <%= turbo_frame_tag @comment do %>
        <%= render partial: "shared/comment", :collection => @comment.comments, :locals => { :counter => 0 } %>
    <% end %>
<% end %>

<%= turbo_stream.update "show-children-#{@comment.id}" do %>
    <%= button_to "Show less", less_comment_path(@comment) %>
<% end %>