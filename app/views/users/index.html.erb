<div class="users-index-box">
    <div class="all-users">
        <% @users.each do | user | %>
            <% unless same_user?(user) %>
                <div id="single-user-all-<%= user.id %>">
                    <div class="identity">
                        <div>
                            <% if user.profile.avatar.attached?%>
                                <%= cl_image_tag(@user.profile.avatar.key, radius: :max, height: 50, width: 50, crop: :scale, border: "2px_solid_brown") %>
                            <% else %>
                                <%= cl_image_tag("default_avatar.png", folder: "projects/facebook", radius: :max, height: 50, width: 50, crop: :scale, border: "2px_solid_brown") %>
                            <% end %>
                        </div>
                        <div>
                            <%= link_to "#{user.name}", user_path(user.id) %>
                        </div>
                    </div>
                    <div id="index-user-<%= user.id %>">
                        <% if blocked?(user) %>
                            <div>You blocked this user. Unblock him to see his activity.</div>
                            <%= render "shared/block_buttons", user: user %>
                        <% elsif blocked_by?(user) %>
                            <div>This user blocked you.</div>
                        <% else %>
                            <div id="index-user-friendship-<%= user.id %>">
                                <%= render "shared/friend_buttons", user: user %>
                            </div>
                            <div id="index-user-follow-<%= user.id %>">
                                <%= render "shared/follow_buttons", user: user %>
                            </div>
                            <div id="index-user-block-<%= user.id %>">
                                <%= render "shared/block_buttons", user: user %>
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>

