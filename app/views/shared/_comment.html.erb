<%= turbo_frame_tag comment do %>

    <%= render partial: "shared/comment_single", object: comment, as: :comment %>

    <%= counter %>
    <% counter += 1 %>

    <% unless counter > 3 %>
        <ul id="nested-list-<%= comment.id %>">
            <%= render partial: 'shared/comment', :collection => comment.comments, :locals => { :counter => counter } %>
        </ul>
    <% end %>

<% end %>