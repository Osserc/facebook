<% if liked?(post) %>
    <%= button_to "Unlike", like_path(find_like(post.model_name.human, post.id)), method: :delete, params: { likeable_type: post.model_name.human, likeable_id: post.id } %>
<% else %>
    <%= button_to "Like", likes_path, params: { likeable_type: post.model_name.human, likeable_id: post.id } %>
<% end %>